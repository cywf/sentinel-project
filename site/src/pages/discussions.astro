---
import Layout from '../layouts/Layout.astro';
import DiscussionsList from '../components/DiscussionsList';
---

<Layout title="Discussions">
  <div class="container mx-auto px-4 py-8">
    <div class="prose max-w-none mb-8">
      <h1 class="text-4xl font-bold mb-4 text-base-content">
        <svg xmlns="http://www.w3.org/2000/svg" class="inline-block h-10 w-10 mr-3 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        Community Discussions
      </h1>
      <p class="text-lg text-base-content/80">
        Browse and search recent discussions from the Sentinel Project community.
      </p>
    </div>

    <DiscussionsList client:load />

    <div class="mt-8 text-center">
      <a 
        href="https://github.com/cywf/sentinel-project/discussions/new"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Start a New Discussion
      </a>
    </div>
  </div>
</Layout>
